#twitter_info
  %a{ :href => "http://twitter.com/#{@twitter_user.screen_name}", :title => "@#{@twitter_user.screen_name}"}
    = image_tag( "twitter.png", :alt => "Twitter", :class=> "der")
  #twitter_info_wrap
    %img{:src => @twitter_user.profile_image_url, :alt => @twitter_user.screen_name, :class=>"izq"}
    %p
      %strong
        =@twitter_user.name
        %a{ :href => "http://twitter.com/#{@twitter_user.screen_name}", :title => "@#{@twitter_user.screen_name}"}
          ="@#{@twitter_user.screen_name}"
    %p
      =@twitter_user.description
        
    %p 
      %strong Siguiendo: 
      =@twitter_user.friends_count 
      %strong Seguidores: 
      =@twitter_user.followers_count
      
    %h3 Tweets recientes
    %ul.tweets
      -@tweets.each do |tweet|
        %li{ :class => cycle('tweets odd', 'tweets even')} 
          =raw tweet['text'] 
          %br
          %small
            %a{ :href=> "http://twitter.com/#{@twitter_user.screen_name}/status/#{tweet['id_str']}"}
              =image_tag("twitter-link.png", :alt => "Link")
              =tweet['created_at']
            -#=tweet.inspect
